<script>
    $(document).ready(function () {
        $("#b1hide").click(function () {
            $("#des2").fadeOut(500);
        });
        $("#b1show").click(function () {
            $("#des2").fadeIn(500);
            $("#des22").fadeIn(500);
            $("#b1show").hide();
        });
        $("#b2hide").click(function () {
            $("#des2").fadeOut(500);
        });
        $("#b2show").click(function () {
            $("#des3").fadeIn(500);
            $("#des33").fadeIn(500);
            $("#b2show").hide();
        });
        $("#b3hide").click(function () {
            $("#des3").fadeOut(500);
        });
    });
</script>