                    <label>Budget :</label>
                    <br />
                    <div class="form-group input-group has-success has-feedback">
                        <span class="input-group-addon">RP.</span>
                        @*@Html.TextBoxFor(m => m.travel_request.allowance_meal_idr, new { @class = "form-control" , placeholder = "Meal Allowance" })*@

                    </div>
                    <div class="form-group input-group has-success has-feedback">
