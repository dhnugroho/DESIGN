                                    @Html.RadioButtonFor(m => m.travel_request.overseas_flag, true) Overseas
                                </label>
                            </div>
                        <div>
                            @Html.DropDownListFor(m => m.travel_request.id_destination_city, asd, "Select", new { @class = "form-control", placeholder = "Destination" })
                        </div>
                    </div>
                    <div style="padding:5px; height:220px;" id="des22" hidden>
